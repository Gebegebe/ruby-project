<h1>Listing games</h1>

<%= link_to 'New Game', new_game_path %>
 
<table>
  <tr>
    <th id="title">Title</th>
    <th colspan="2"></th>
  </tr>
 
  <% @games.each do |game| %>
    <tr>
      <td><%= link_to game.title, game_path(game) %></td>
      <td><%= link_to 'Edit', edit_game_path(game) %></td>
      <td><%= link_to 'Destroy', game_path(game),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>